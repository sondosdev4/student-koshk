@model IEnumerable<StudentSuplier.Models.Library>

@{
    ViewData["Title"] = "الصفحة الرئيسية";

    if (ViewBag.userName != null)
    {
        ViewData["UserName"] = ViewBag.userName;
        Layout = "~/Views/Shared/_StudentLayout.cshtml";
        ViewData["count"] = ViewBag.cart;
    }
    else
        Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
</head>
<body>
    <section class="hero-banner">
        <div class="overlay">
            <div class="hero-content">
                <h1>منصة <span class="highlight">كشك الطالب</span></h1>
                <p>كل ما يحتاجه الطالب في مكان واحد — أقلام، دفاتر، أدوات، وأكثر!</p>
                <form class="search-box" asp-action="Index" asp-controller="Home" method="get">
                    <input type="text" name="search" placeholder="ابحث عن مكتبة..." value="@ViewBag.Search" />
                    <button type="submit">🔍</button>
                </form>
            </div>
        </div>
    </section>

    <div class="libraries-container">
        @foreach (var library in Model)
        {
            <div class="library-card" id="libraries-section">
                <a href="@Url.Action("Details", "Library", new { id = library.LibraryId })" style="text-decoration: none; color: inherit;">
                    <img src="@library.ImageUrl" alt="@library.LibraryName" />
                    <h5>@library.LibraryName</h5>
                    <div class="location">📍 @library.Location</div>
                    <div>
                        <button class="btn-outline-productView">عرض المنتجات</button>
                    </div>
                </a>
            </div>
        }
    </div>

</body>
</html>
