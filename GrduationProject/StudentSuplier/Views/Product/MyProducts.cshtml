@model List<Product>
@{
    ViewData["Title"] = "منتجاتي";
    ViewData["UserName"] = ViewBag.username;
    Layout = "~/Views/Shared/_LibraryLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    .library-products-container {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

        .header-section h2 {
            color: #2c3e50;
            font-weight: 600;
        }

    .btn-add-product {
        background-color: #28a745;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
        transition: all 0.3s;
    }

        .btn-add-product:hover {
            background-color: #218838;
            color: white;
            transform: translateY(-2px);
        }

    .filter-section {
        margin-bottom: 30px;
    }

    .filter-form .input-group {
        max-width: 500px;
    }

    .btn-filter {
        background-color: #3498db;
        color: white;
    }

    .no-products {
        text-align: center;
        padding: 40px;
        background-color: #f8f9fa;
        border-radius: 8px;
        color: #6c757d;
    }

        .no-products i {
            font-size: 40px;
            margin-bottom: 15px;
            color: #17a2b8;
        }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
    }

    .product-card {
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .product-image {
        height: 200px;
        overflow: hidden;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s;
        }

    .product-card:hover .product-image img {
        transform: scale(1.05);
    }

    .product-details {
        padding: 15px;
    }

        .product-details h3 {
            margin-top: 0;
            color: #2c3e50;
            font-size: 1.2rem;
        }

    .category-badge {
        display: inline-block;
        background-color: #e8f4fd;
        color: #3498db;
        padding: 3px 8px;
        border-radius: 4px;
        font-size: 0.8rem;
        margin: 5px 0;
    }

    .description {
        color: #7f8c8d;
        font-size: 0.9rem;
        margin: 10px 0;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .meta-info {
        display: flex;
        justify-content: space-between;
        margin-top: 15px;
        color: #34495e;
        font-weight: 500;
    }

        .meta-info i {
            margin-right: 5px;
        }

    .product-actions {
        display: flex;
        border-top: 1px solid #eee;
        padding: 10px 15px;
    }

    .btn-edit{
        flex: 1;
        padding: 8px;
        border: none;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        transition: all 0.3s;
    }

    .btn-edit {
        background-color: #ffc107;
        color: #212529;
        margin-right: 5px;
        border-radius: 4px;
    }

        .btn-edit:hover {
            background-color: #e0a800;
        }

</style>

<div class="library-products-container">
    <div class="header-section">
        <h2><i class="fas fa-box-open"></i> منتجاتي</h2>
        <a href="/Product/AddProducts" class="btn btn-add-product">
            <i class="fas fa-plus"></i> إضافة منتج جديد
        </a>
    </div>

    <div class="filter-section">
        <form method="get" asp-action="MyProducts" class="filter-form">
            <input type="hidden" name="libraryId" value="@ViewBag.LibraryId" />
            <div class="input-group">
                <select name="category" class="form-select" onchange="this.form.submit()">
                    <option value="">جميع التصنيفات</option>
                    @foreach (var cat in ViewBag.Categories as List<string> ?? new List<string>())
                    {
                        <option value="@cat" selected="@(cat == ViewBag.SelectedCategory?.ToString())">
                            @cat
                        </option>
                    }
                </select>
            </div>
        </form>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="no-products">
            <i class="fas fa-info-circle"></i>
            <p>لا يوجد منتجات حالياً. <a href="/Product/AddProducts">اضغط هنا لإضافة منتج جديد</a></p>
        </div>
    }
    else
    {
        <div class="products-grid">
            @foreach (var product in Model)
            {
                <div class="product-card">
                    <div class="product-image">
                        <img src="@product.ImageUrl" alt="@product.ProductName" onerror="this.src='/images/default-product.png'">
                    </div>
                    <div class="product-details">
                        <h3>@product.ProductName  -   @product.isactive </h3>
                        <span class="category-badge">@product.Category</span>
                        <p class="description">@product.Description</p>
                        <div class="meta-info">
                            <span><i class="fas fa-tag"></i> @product.Price د.أ</span>
                        </div>
                    </div>
                    <div class="product-actions">
                        <a asp-action="EditProduct" asp-route-id="@product.ProductId" class="btn-edit">
                            <i class="fas fa-edit"></i> تعديل
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>

